@model AccountIndexViewModel
@{
    var User = ViewBag.UserName ?? "Name-Surname";
    var City = ViewBag.City ?? "City";
    var FirstName = ViewBag.Firstname ?? "First Name";
    var LastName = ViewBag.LastName ?? "Last Name";
    var Phone = ViewBag.Phone ?? "Phone";
    var Address = ViewBag.Address ?? "Adress";
    var ZipCode = ViewBag.Zip ?? "Zip Code";
    var Country = ViewBag.Country ?? "Select";
    var Image = ViewBag.Image ?? "newUser.png";

}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">My Dashboard</h3>
    </div>
    <div class="card-body text-center item-user border-bottom">
        <div class="profile-pic">
            <div class="profile-pic-img">
                <span class="bg-success dots" data-toggle="tooltip" data-placement="top" title="online"></span>
                <img src="~/images/users/@Image" class="brround" alt="@User">
            </div>
            <a href="#" class="text-dark"><h4 class="mt-3 mb-0 font-weight-semibold">@User</h4></a>
        </div>
    </div>
    <div class="item1-links  mb-0">
        <a asp-action="profile" asp-controller="account" class=" toogle d-flex border-bottom btn">
            <span class="icon1 mr-2"><i class="fas fa-edit fs-16"></i></span> Edit Profile
        </a>
        @if (ViewBag.IsCompany == true)
        {
            <a  asp-controller="job" asp-action="myjob" class="toogle d-flex border-bottom btn">
                <span class=" icon1 mr-2"><i class="fas fa-briefcase fs-16"></i></span> My Jobs
            </a>
            <a asp-controller="job" asp-action="create" class="toogle d-flex border-bottom btn">
                <span class=" icon1 mr-2"><i class="fas fa-plus-square fs-16"></i></span> Submit Job
            </a>
        }
        else
        {
            if (ViewBag.HasResume == true)
            {
                <a asp-action="resume" asp-controller="account" class="toogle d-flex border-bottom">
                    <span class="icon1 mr-2"><i class="far fa-file fs-16"></i></span> Edit Resume
                </a>
            }
            else
            {
                <a asp-action="resume" asp-controller="account" class="toogle d-flex border-bottom">
                    <span class="icon1 mr-2"><i class="far fa-file fs-16"></i></span> Create Resume
                </a>
            }
        }
