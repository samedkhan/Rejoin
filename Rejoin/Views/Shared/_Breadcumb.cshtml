@model BreadcumbViewModel
<!--Breadcrumb-->
<section>
    <div class="bannerimg cover-image bg-background3" data-image-src="~/images/banners/banner2.jpg">
        <div class="header-text mb-0">
            <div class="container">
                <div class="text-center text-white">
                    <h1 class="">@Model.Title</h1>
                    <ol class="breadcrumb text-center">
                        @foreach (KeyValuePair<string, string> item in Model.Path)
                        {
                            if (item.Value != null)
                            {
                                <li class="breadcrumb-item"><a asp-action="@item.Key" asp-controller="@item.Value">@item.Value</a></li>
                            }
                            else
                            {
                                <li class="breadcrumb-item active text-white" aria-current="page">@item.Key</li>
                            }

                        }
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Breadcrumb-->