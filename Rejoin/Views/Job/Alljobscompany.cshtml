@model JobIndexViewModel
@inject IRelativeTime relativetime
@{
    ViewData["Title"] = "Alljobscompany";
}

<!--BreadCrumb-->
<div class="bg-white border-bottom">
    <div class="container">
        <div class="page-header">
            <h4 class="page-title">Job Details</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Categories</a></li>
                <li class="breadcrumb-item active" aria-current="page"><a href="#">All jobs</a></li>
                <li class="breadcrumb-item active" aria-current="page">All jobs of @ViewBag.User.FirstName</li>
            </ol>
        </div>
    </div>
</div>
<!--/BreadCrumb-->
<!--Job listing-->
<section class="sptb">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-12 col-md-12">
                @foreach (Job item in ViewBag.Jobs)
                {
                    <!--Jobs Description-->
                <div class="card overflow-hidden">
                    <div class="ribbon ribbon-top-right text-danger">
                        @if (item.IsActive == true)
                        {
                            <span class="bg-success">Active</span>
                        }
                        else
                        {
                            <span class="bg-danger">Deactive</span>
                        }
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="profile-pic mb-0">
                                    <div class="d-md-flex">

                                        <div class="ml-0">
                                            <h4 class="mt-2 mb-1 fs-20 text-dark font-weight-bold">@item.Title</h4>
                                            <div class="mt-2">
                                                <ul class="mt-4 d-flex">
                                                    <li class="mr-5"><a asp-controller="company" asp-action="details" asp-route-id="@item.UserId" class="icons"><i class="fas fa-briefcase mr-1 text-muted"></i>@item.user.FirstName @item.user.LastName</a></li>
                                                    <li class="mr-5"><a href="#" class="icons"><i class="fas fa-map-marker-alt mr-1 text-muted"></i>@item.Location</a></li>
                                                    <li class="mr-5"><a href="#" class="icons"><i class="fas fa-calendar-alt mr-1 text-muted"></i> @relativetime.PublishedTime(item.CreatedAt) </a></li>

                                                </ul>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body border-top">
                        <h4 class="mb-4 card-title">Job Description</h4>
                        <div class="mb-4 border-bottom">
                            <p>@item.JobDescription</p>
                        </div>
                        <h4 class="mb-4 card-title">Job Details</h4>
                        <div class="row">
                            <div class="col-xl-12 col-md-12">
                                <div class="table-responsive">
                                    <table class="table row table-borderless w-100 m-0 text-nowrap ">
                                        <tbody class="col-lg-12 col-xl-6 p-0">
                                            <tr>
                                                <td class="w-150 px-0"><span class="font-weight-semibold">Job Type</span></td>
                                                <td><span>:</span></td>
                                                <td><span> @item.Jobtype</span></td>
                                            </tr>
                                            <tr>
                                                <td class="w-150 px-0"><span class="font-weight-semibold">Role</span></td>
                                                <td><span>:</span></td>
                                                <td><span> @item.Role </span></td>
                                            </tr>
                                            <tr>
                                                <td class="w-150 px-0"><span class="font-weight-semibold">Salary</span></td>
                                                <td><span>:</span></td>
                                                <td><span> @item.Salary.ToString("0") $</span></td>
                                            </tr>
                                        </tbody>
                                        <tbody class="col-lg-12 col-xl-6 p-0">
                                            <tr>
                                                <td class="w-150 px-0"><span class="font-weight-semibold">Expierence</span></td>
                                                <td><span>:</span></td>
                                                <td><span> @item.ExpierenceYear years</span></td>
                                            </tr>
                                            <tr>
                                                <td class="w-150 px-0"><span class="font-weight-semibold">Locality</span></td>
                                                <td><span>:</span></td>
                                                <td><span> @item.Location </span></td>
                                            </tr>
                                            <tr>
                                                <td class="w-150 px-0"><span class="font-weight-semibold">Company</span></td>
                                                <td><span>:</span></td>
                                                <td><span> @item.user.FirstName @item.user.LastName </span></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (ViewBag.IsCompany != true)
                    {
                        <div class="card-footer bg-light-50">
                            <div class="icons">

                                <a href="#" class="btn btn-success icons mt-1 mb-1" data-toggle="modal" data-target="#apply"><i class="fa fa-check mr-1"></i> Apply</a>
                                <a href="#" class="btn btn-primary icons" data-toggle="modal" data-target="#contact"><i class="si si-phone mr-1"></i> Contact Now</a>
                                <a href="#" class="btn btn-danger icons mt-1 mb-1" data-toggle="modal" data-target="#report"><i class="icon icon-exclamation mr-1"></i> Report Abuse</a>
                            </div>
                        </div>
                    }

                </div>

                }

            </div>

            <partial name="_Company" />

        </div>
    </div>
</section>



